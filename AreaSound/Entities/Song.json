{
  "name": "Song",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Song title"
    },
    "artist": {
      "type": "string",
      "description": "Artist name"
    },
    "album": {
      "type": "string",
      "description": "Album name"
    },
    "duration": {
      "type": "string",
      "description": "Song duration (e.g. 3:45)"
    },
    "playlist_id": {
      "type": "string",
      "description": "ID of the user playlist this song belongs to"
    },
    "landmark_id": {
      "type": "string",
      "description": "ID of the landmark playlist this song belongs to"
    },
    "source_url": {
      "type": "string",
      "description": "The original URL of the song if imported"
    },
    "platform": {
      "type": "string",
      "description": "The music platform (e.g., Spotify, YouTube) if imported"
    },
    "vote_count": {
      "type": "number",
      "description": "Net vote count (likes minus dislikes)",
      "default": 0
    }
  },
  "required": [
    "title",
    "artist"
  ]
}