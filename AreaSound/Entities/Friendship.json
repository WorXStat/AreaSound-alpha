{
  "name": "Friendship",
  "type": "object",
  "properties": {
    "requester_email": {
      "type": "string",
      "description": "Email of the user sending the request"
    },
    "recipient_email": {
      "type": "string",
      "description": "Email of the user receiving the request"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "accepted",
        "rejected"
      ],
      "default": "pending",
      "description": "Status of the friendship"
    }
  },
  "required": [
    "requester_email",
    "recipient_email"
  ]
}